{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "checkJs": false,
    "rootDir": ".",
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@eadam/libs": ["libs/src/lib/index.ts"],
      "@eadam/libs/config": ["libs/src/lib/config/"],
      "@eadam/libs/dtos": ["libs/src/lib/dtos/"],
      "@eadam/libs/entities": ["libs/src/lib/entities/"],
      "@eadam/libs/enum": ["libs/src/lib/enum/"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
